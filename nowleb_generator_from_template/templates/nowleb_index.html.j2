<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Nowleb – News</title>
  <link rel="icon" href="https://nowleb.com/assets/images/favicon.png" type="image/png"/>
  <style>
    :root{ --accent:#d32030; --muted:#666; }
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;margin:0}
    header{position:sticky;top:0;background:#fff;border-bottom:1px solid #eee;padding:12px 16px;z-index:10}
    .tabs{display:flex;gap:8px;flex-wrap:wrap}
    .tabs a{border:1px solid #ddd;border-radius:999px;padding:6px 12px;text-decoration:none;color:inherit}
    .tabs a.active{background:var(--accent);color:#fff;border-color:var(--accent)}
    main{padding:16px;max-width:1100px;margin:0 auto}
    .grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(280px,1fr));gap:16px;margin-top:12px}
    article{border:1px solid #eee;border-radius:12px;overflow:hidden}
    .img{padding-top:56%;background:#f6f6f6;position:relative}
    .img img{position:absolute;inset:0;width:100%;height:100%;object-fit:cover}
    .body{padding:12px}
    .muted{color:var(--muted);font-size:12px}
  </style>
</head>
<body>
  <header>
    <h1 style="margin:0">Nowleb News</h1>
    <div class="tabs" id="tabs"></div>
  </header>
  <main>
    <div class="grid" id="grid"></div>
  </main>
  <script>
    const ITEMS = {{ items | tojson | safe }};
    const TABS = ["Entertainment","Food","Sports","Events","Music","Fashion"];
    const $tabs = document.getElementById('tabs');
    const $grid = document.getElementById('grid');
    let active = TABS[0];

    function renderTabs(){
      $tabs.innerHTML = '';
      for(const t of TABS){
        const a = document.createElement('a');
        a.textContent = t;
        a.href = '#';
        a.className = t===active ? 'active' : '';
        a.onclick = (e)=>{e.preventDefault(); active=t; render();};
        $tabs.appendChild(a);
      }
    }

    function render(){
      $grid.innerHTML='';
      const filtered = ITEMS.filter(i=>i.category===active);
      for(const it of filtered){
        const art = document.createElement('article');
        const link = document.createElement('a');
        link.href = `${it.category.toLowerCase()}/${it.slug}/`;
        link.style='text-decoration:none;color:inherit;';
        const imgwrap = document.createElement('div');
        imgwrap.className='img';
        if(it.hero_image){
          const img = document.createElement('img');
          img.src = it.hero_image; img.loading='lazy';
          imgwrap.appendChild(img);
        }
        const body = document.createElement('div'); body.className='body';
        const h3 = document.createElement('h3'); h3.textContent=it.title; h3.style='margin:0 0 6px 0;font-size:16px;line-height:1.3';
        const meta = document.createElement('div'); meta.className='muted'; meta.textContent = `${it.source} • ${it.published}`;
        const p = document.createElement('p'); p.className='muted'; p.textContent = it.summary;
        body.appendChild(h3); body.appendChild(meta); body.appendChild(p);
        link.appendChild(imgwrap); link.appendChild(body);
        art.appendChild(link);
        $grid.appendChild(art);
      }
    }

    renderTabs(); render();
  </script>
</body>
</html>
